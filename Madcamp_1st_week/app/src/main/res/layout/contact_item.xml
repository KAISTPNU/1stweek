<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginTop="30dp">
    <androidx.cardview.widget.CardView
        android:layout_width="220dp"
        android:layout_height="290dp"
        android:backgroundTint="@color/darknavy"
        card_view:cardCornerRadius="10dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/white"
                android:fontFamily="@font/uber_move_medium"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/detailjob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detail Job"
                android:textColor="@color/otmeal"
                android:fontFamily="@font/uber_move_medium"
                android:textAlignment="center"
                android:textSize="11dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                card_view:cardCornerRadius="50dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/test_image"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Phone"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/uber_move_medium" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="010-1234-5678"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:fontFamily="@font/uber_move_medium" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Email"
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:layout_marginRight="60dp"
                    android:fontFamily="@font/uber_move_medium" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Github.com"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="12dp"
                    android:autoSizeMinTextSize="5dp"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:fontFamily="@font/uber_move_medium" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Company"
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:layout_marginRight="60dp"
                    android:fontFamily="@font/uber_move_medium" />
                <TextView
                    android:id="@+id/company"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="KAKAO"
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/uber_move_medium"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
