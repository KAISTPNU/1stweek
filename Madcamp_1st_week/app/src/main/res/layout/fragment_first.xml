<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FirstFragment"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/developtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DEVELOPER"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/uber_move_medium"
            android:gravity="center"
            android:textColor="@color/darknavy"
            android:textStyle="bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/developers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/developtxt"
            android:paddingTop="20dp">
        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/designertxt"
            android:text="DESIGNER"
            android:textSize="20dp"
            android:fontFamily="@font/uber_move_medium"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/developers"
            android:textColor="@color/darknavy"
            android:textStyle="bold"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/designers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/designertxt"
            android:paddingTop="20dp">
        </androidx.recyclerview.widget.RecyclerView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>