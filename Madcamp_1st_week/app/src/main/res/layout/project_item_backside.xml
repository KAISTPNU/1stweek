<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp">
        <LinearLayout
            android:id="@+id/project_title_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:background="@drawable/project_item_backside_background">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/leader_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/picture"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0.05"
                        android:src="@drawable/profile"/>

                    <LinearLayout
                        android:id="@+id/title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/picture"
                        app:layout_constraintWidth_percent="0.7"
                        app:layout_constraintVertical_bias="0.1"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Leader info"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:fontFamily="@font/uber_move_medium" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/nameLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/picture"
                        app:layout_constraintWidth_percent="0.7"
                        app:layout_constraintVertical_bias="0.1"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/title"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name."
                            android:paddingLeft="10dp"
                            android:textColor="@color/white"
                            android:layout_gravity="left"
                            android:fontFamily="@font/uber_move_medium"/>

                        <TextView
                            android:id="@+id/leader_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jang Byeong Gyu"
                            android:paddingRight="10dp"
                            android:gravity="right"
                            android:textColor="@color/white"
                            android:fontFamily="@font/uber_move_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/emailLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/picture"
                        app:layout_constraintWidth_percent="0.7"
                        app:layout_constraintVertical_bias="0.1"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/nameLayout"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email."
                            android:textColor="@color/white"
                            android:fontFamily="@font/uber_move_medium"
                            android:paddingLeft="10dp"/>
                        <TextView
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="testemail@naver.com"
                            android:gravity="right"
                            android:textColor="@color/white"
                            android:fontFamily="@font/uber_move_medium"
                            android:paddingRight="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/phoneLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/picture"
                        app:layout_constraintWidth_percent="0.7"
                        app:layout_constraintVertical_bias="0.1"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/emailLayout"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone."
                            android:textColor="@color/white"
                            android:fontFamily="@font/uber_move_medium"
                            android:paddingLeft="10dp"/>
                        <TextView
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="010-1234-5678"
                            android:gravity="right"
                            android:textColor="@color/white"
                            android:fontFamily="@font/uber_move_medium"
                            android:paddingRight="10dp"/>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/detail_work"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.63"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/leader_info"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/project_item_backside_inner">
                    <LinearLayout
                        android:id="@+id/participantsLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Participants"
                            android:textColor="@color/black"
                            android:paddingLeft="10dp"
                            android:fontFamily="@font/uber_move_medium"/>
                        <TextView
                            android:id="@+id/participants"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lee Juhyeon, Lee Junyoung"
                            android:textColor="@color/black"
                            android:fontFamily="@font/uber_move_medium"
                            android:paddingLeft="15dp"
                            android:textSize="12dp"/>
                    </LinearLayout>
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/chart"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0.1"
                        app:layout_constraintVertical_bias="0.1"
                        app:layout_constraintTop_toBottomOf="@id/participantsLayout"
                        app:layout_constraintWidth_percent="0.5"
                        app:layout_constraintHeight_percent="0.8"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/todoList"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintWidth_percent="0.45"
                        app:layout_constraintLeft_toRightOf="@id/chart"
                        app:layout_constraintTop_toBottomOf="@id/participantsLayout"
                        android:paddingBottom="5dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
