<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50dp"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/feed_profile_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profile"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/feed_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/uber_move_medium"
            android:paddingTop="5dp"
            android:text="Byeongkyu Chang"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/feed_profile_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Founder Of Krafton"
            android:fontFamily="@font/uber_move_medium"
            android:textAlignment="center"
            android:textSize="15dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/feed_created"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="23"
                    android:fontFamily="@font/uber_move_medium"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:paddingTop="5dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Created"
                    android:fontFamily="@font/uber_move_medium"
                    android:textAlignment="center"
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/feed_mentioned"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="398"
                    android:fontFamily="@font/uber_move_medium"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:paddingTop="5dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mentioned"
                    android:fontFamily="@font/uber_move_medium"
                    android:textAlignment="center"
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/feed_followers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="936"
                    android:fontFamily="@font/uber_move_medium"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:paddingTop="5dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Followers"
                    android:fontFamily="@font/uber_move_medium"
                    android:textAlignment="center"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/lightgray"
        android:padding="10dp">

        <GridView
            android:id="@+id/feed_gallery_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:horizontalSpacing="7dp"
            android:numColumns="3"
            android:verticalSpacing="7dp" />
    </LinearLayout>
</LinearLayout>